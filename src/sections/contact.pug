//- Contact Section
footer#contact(class="bg-black mt-20 py-20 text-center")
  div(class="container mx-auto px-6")
    h2(class="text-3xl md:text-4xl font-bold tracking-tighter mb-6") Get in Touch
    p(class="text-lg text-gray-400 mb-8") You can reach me via email or find me on social media.
    if cv.meta.resumeUrl
      a(href=cv.meta.resumeUrl, target="_blank", class="bg-blue-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-blue-700 transition-colors text-lg inline-block mb-8") Download Resume
    div(class="flex justify-center gap-6 mt- flex-wrap")
      - var iconMap = {}
      - iconMap['GitHub'] = 'github'
      - iconMap['LinkedIn'] = 'linkedin-in'
      - iconMap['Twitter'] = 'twitter'
      - iconMap['Facebook'] = 'facebook-f'
      - iconMap['Instagram'] = 'instagram'
      - iconMap['Mastodon'] = 'mastodon'
      - iconMap['DEV'] = 'dev'
      - iconMap['CodePen'] = 'codepen'
      - iconMap['Stack Overflow'] = 'stack-overflow'
      - iconMap['YouTube'] = 'youtube'
      - iconMap['Twitch'] = 'twitch'
      - iconMap['Dribbble'] = 'dribbble'
      - iconMap['Behance'] = 'behance'
      - iconMap['Medium'] = 'medium'
      - iconMap['Reddit'] = 'reddit-alien'
      each profile in cv.basics.profiles
        - var faIcon = null;
        if iconMap[profile.network]
          - faIcon = ['fab', 'fa-' + iconMap[profile.network]];
        else if profile.network === 'Codewars'
          - faIcon = null;
        else
          - faIcon = ['fas', 'fa-link'];
        a(
          href=profile.url,
          target="_blank",
          rel="noopener noreferrer",
          class="relative text-gray-300 hover:text-white transition-colors text-2xl px-3 py-1 after:absolute after:left-0 after:bottom-0 after:w-0 after:h-0.5 after:bg-blue-400 after:transition-all after:duration-300 hover:after:w-full focus:after:w-full active:after:w-full after:rounded-full flex items-center gap-2"
        )
          if faIcon
            i(class=faIcon aria-hidden="true")
          if profile.network === 'Codewars' && profile.badge
            img(src=profile.badge, alt="Codewars Badge", class="h-6 w-6 inline-block align-middle")
          | #{profile.network}
    if cv.meta.credits
      div(class="text-sm text-gray-600 mt-12")
        each credit in cv.meta.credits
          span.px-2
            if credit.url
              a(href=credit.url, target="_blank", class="hover:underline")= credit.name
            else
              = credit.name
