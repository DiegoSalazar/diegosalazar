%html
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-type"}/
    %title Diego Salazar's CV
    %link{href: "/css/resume-boilerplate.css", rel: "stylesheet"}/
    %link{href: "/css/resume-elegant.css", rel: "stylesheet"}/
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"}
    %script{src: "/js/jquery.autobars.js", type: "text/javascript"}
    %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    %script{src: "//cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.min.js", type: "text/javascript"}
    %script{src: "resume-boilerplate.hbs", type: "text/x-handlebars-template"}
    :javascript
      $(document).ready(function() {
        $(document).autoBars(function() {
          $.getJSON("diegosalazar-cv.json", function(json) {

            var data = { "resume" : json};
            
            var $html = $.handlebarTemplates['resume-boilerplate'](data);
            $('body').append($html);
          })
          .fail(function(jqxhr, textStatus, error) { 
             var err = textStatus + ", " + error;
             console.log( "Request Failed: " + err );
           });
        });
      })
  %body
